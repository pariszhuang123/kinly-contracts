{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kinly Contracts Registry",
  "type": "object",
  "additionalProperties": false,
  "required": ["generatedAt", "domains"],
  "properties": {
    "generatedAt": {"type": "string"},
    "domains": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/domain"
      }
    }
  },
  "definitions": {
    "domain": {
      "type": "object",
      "additionalProperties": false,
      "required": ["latest", "docs", "entities", "functions"],
      "properties": {
        "latest": {"type": "string"},
        "docs": {"type": "string"},
        "entities": {"type": "object"},
        "functions": {
          "type": "object",
          "additionalProperties": {"$ref": "#/definitions/function"}
        },
        "rls": {
          "type": "array",
          "items": {"$ref": "#/definitions/rlsRule"}
        }
      }
    },
    "function": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {"type": "string", "enum": ["edge", "rpc", "rest", "realtime"]},
        "auth": {"type": "string"},
        "caller": {"type": "string"},
        "order": {"type": "array", "items": {"type": "string"}},
        "effects": {"type": "array", "items": {"type": "string"}},
        "calls": {"type": "array", "items": {"type": "string"}}
      },
      "additionalProperties": true
    },
    "rlsRule": {
      "type": "object",
      "required": ["table", "rule"],
      "properties": {
        "table": {"type": "string"},
        "rule": {"type": "string"}
      },
      "additionalProperties": true
    }
  }
}

